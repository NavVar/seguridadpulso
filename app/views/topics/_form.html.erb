
<div class="container-fluid">
<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
  <div class="alert alert-danger" role="alert">

    <div id="error_explanation">
      <h4>¡Oops! Algo pasó mientras guardabamos la información:</h4>
      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
  <% end %>

<div class="container-fluid">
<div class="row">
    <div class="col-xs-6">
      <p class='text-muted'>
        Rellene los siguientes campos con la información pertinente:<br>
      </p>
    </div>
    <div class="col-xs-6">
      <p class='text-muted' style="color:#D46A6A;" align="right">
        <i><small>Los campos marcados con (*) son obligatorios.</small>
        <br><br></i>
      </p>
    </div>
  </div>
  </div>

<div class="row">
  <div class="container-fluid" style="margin-left:6%; margin-right:6%;">

    <div class="col-xs-6">
      <div class="field">
        <p class='text-muted'><%= f.label :nombre %>*<br>
        <%= f.text_field :name, size:'50' %></p>
      </div>
    </div>
  </div>
</div>
<br>
<center>
  <div class="actions">
    <%= f.submit 'Crear', :class => 'btn btn-sm btn-success'%>
    <%= link_to 'Atrás', topics_path, :class => 'btn btn-sm btn-default'%>
  </div>
</center>
<% end %>

<br><br>
</div>
