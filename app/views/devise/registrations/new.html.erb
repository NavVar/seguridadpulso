<h1 style="border-bottom: 1px solid #2D6F96; color: #2D6F96; padding-bottom:7px;">Crear cuenta de usuario</h1>

<div class="container-fluid">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="container-fluid">
      <div class="col-xs-6">
        <p class='text-muted'>
          Rellene los siguientes campos con la información pertinente:<br>
        </p>
      </div>
      <div class="col-xs-6">
        <p class='text-muted' style="color:#D46A6A;" align="right">
          <i><small>Los campos marcados con (*) son obligatorios.</small>
          <br><br></i>
        </p>
      </div>
    </div>
    </div>
    <div class='row'>
      <div class="container-fluid" style="margin-left:6%; margin-right:6%;">
        <div class="col-xs-6">
          <div class="field">
            <p class='text-muted'><%= f.label :nombre %> *<br>
            <%= f.text_field :name, autofocus: true, size: '50' %>
          </p>
          </div>
          <div class="field">
            <p class='text-muted'><%= f.label :apellido %> *<br>
            <%= f.text_field :lastname, size: '50' %></p>
          </div>

          <div class="field">
            <p class='text-muted'><%= f.label :correo_electrónico %> *<br>
            <%= f.email_field :email, size: '50' %></p>
          </div>

          <div class="field">
            <p class='text-muted'><%= f.label :password %> *
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres minimo)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "off", size: '50'  %></p>
          </div>

          <div class="field">
            <p class='text-muted'><%= f.label :password_confirmation %> *<br>
            <%= f.password_field :password_confirmation, autocomplete: "off", size: '50'  %></p>
          </div>
          <br>
        </div>
        <div class="col-xs-6">
          <div class="field">
            <p class='text-muted'><%= f.label :dirección %> *<br>
            <%= f.text_area :address, size: '50' %></p>
          </div>

          <div class="field">
            <p class='text-muted'><%= f.label :compañía %><br>
            <%= f.collection_select(:company_id, Company.all, :id, :name) %></p>
          </div>
        </div>

    </div>
    <center>
    <div class="actions">
      <%= f.submit "Crear cuenta", class:'btn btn-sm btn-success'%>
      <%- if controller_name != 'sessions' %>
        <%= link_to "Iniciar sesión", new_session_path(resource_name), class:'btn btn-sm btn-default'%><br />
      <% end -%>
    </div>
  </center>
  <% end %>
  </div>
</div>
<br><br>
