<h1 style="border-bottom: 1px solid #2D6F96; color: #2D6F96; padding-bottom:7px;">Editar Compañía</h1>
  <div class="container-fluid">
      <%= form_for(@company) do |f| %>
        <% if @company.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <div id="error_explanation">
            <h4>¡Oops! Algo pasó mientras guardabamos la información:</h4>
            <ul>
            <% @company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
        <% end %>
<div class="row">
  <div class="container-fluid">
    <div class="col-xs-6">
      <p class='text-muted'>
        Rellene los siguientes campos con la información pertinente:<br>
      </p>
    </div>
    <div class="col-xs-6">
      <p class='text-muted' style="color:#D46A6A;" align="right">
        <i><small>Los campos marcados con (*) son obligatorios.</small>
        <br><br></i>
      </p>
    </div>
  </div>
  </div>
  <div class='row'>
    <div class="container-fluid" style="margin-left:6%; margin-right:6%;">
      <div class="col-xs-6">
        <div class="field">
          <p class='text-muted'><b>NIT</b> * <br>
          <%= f.text_field :nit, :size=>'50' %>
          </p>
        </div>
        <div class="field">
          <p class='text-muted'><%= f.label :razon_social %> * <br>
          <%= f.text_field :name, :size=>'50'  %>
          </p>
        </div>

      </div>
      <div class="col-xs-6">
        <div class="field">
          <p class='text-muted'><%= f.label :ubicacion %> * <br>
          <%= f.text_area :location, :size=>'50'%>
          </p>
        </div>
        <div class="field">
          <p class='text-muted'><%= f.label :contacto %> <br>
          <%= f.text_area :contact_reference, :size=>'50'%>
          </p>
        </div>
      </div>
      <div class='col-xs-6'>
      <div class="field">
        <p class='text-muted'><%= f.label :descripcion %> * <br>
        <%= f.text_area :background, size:'52x15' %>
        </p>
      </div>
      </div>
      <div class="col-xs-6">
        <div class="field">
          <p class='text-muted'><b>Logo</b> <br>
          <%= f.file_field :image %>
          </p>
        </div>
      </div>
      <br>
  </div>
</div>

  <div class="actions">
    <center>
      <div class='btn btn-group'>
      <%= f.submit 'Guardar', :class=>'btn btn-sm btn-success'%>
      <%= link_to 'Ver', @company, :class=>'btn btn-sm btn-primary' %>
      <%= link_to 'Atras', companies_path, :class=>'btn btn-sm btn-default' %>
      </div>
    </center>
  </div>
<% end %>
</div>
