<h1 style="border-bottom: 1px solid #2D6F96; color: #2D6F96; padding-bottom:7px;">Índices</h1>
<div class="container-fluid" style="margin-left:22%; margin-right:22%;">

<%= form_tag(development_rates_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar índice" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn btn-sm" type="submit">Buscar</button>
    </div>
  <% end %>
</div>

<div class="container-fluid" style="margin-left:25%; margin-right:25%;">
  <center>
  <table class="table table-striped">
    <col width="95%">
    <col width="5%">
    <thead>
      <tr>
        <th>Nombre</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @development_rates.each do |development_rate| %>
        <tr>
          <td><%= development_rate.name %></td>
          <td>
            <div class='btn btn-group'>
            <%= link_to 'Ver más', development_rate, class:'btn btn-xs btn-default' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%if user_signed_in?%>
  <%if current_user.has_role? :admin%>
    <div class="btn btn-group">
      <!--%= link_to 'Crear índice', new_development_rate_path, class:'btn btn-sm btn-primary' %-->
      <%= link_to 'Atras', :back, :class=>'btn btn-sm btn-default' %>
    </div>
  <%else%>
  <%= link_to 'Atras', :back, :class=>'btn btn-sm btn-default' %>
  <% end %>
  <%else%>
  <%= link_to 'Atras', :back, :class=>'btn btn-sm btn-default' %>
  <% end %>
<br><br>
</center>
  </div>
</div>
