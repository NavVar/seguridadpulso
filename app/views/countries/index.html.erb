  <div class="container-fluid" style="margin-left:10%; margin-right:10%;">

  <%= form_tag(countries_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar país" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
             of using a Rails form helper -->
        <button class="btn btn-sm" type="submit">Buscar</button>
      </div>
    <% end %>
  </div>

