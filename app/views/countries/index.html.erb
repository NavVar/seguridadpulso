      <col width="20%">
      <thead>
        <tr>
          <th>Código</th>
          <th>Nombre</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @countries.each do |country| %>
          <tr>
            <td><%= country.code %></td>
            <td><%= country.name %></td>
            <td>
              <div class='btn btn-group'>
                <%= link_to 'Editar', edit_country_path(country), class:'btn btn-xs btn-primary' %>
                <%= link_to 'Eliminar', country, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-xs btn-danger'%>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

