

<h1 style=" border-bottom: 1px solid #2D6F96; color: #2D6F96; padding-bottom:7px;">Clases de elementos</h1>

<div class="container-fluid" style="margin-left:15%; margin-right:15%;">
<center>
  <table class="table table-striped">

    <thead>
      <tr>
        <th>Nombre</th>

        <th>Opciones</th>
      </tr>
    </thead>

    <tbody>
    <% @rateclasses.each do |rateclass| %>

        <tr>
          <td><%= rateclass.name %></td>

          <td>
            <div class='btn btn-group'>
              <%= link_to 'Editar', edit_rateclass_path(rateclass) , class:'btn btn-xs btn-primary' %>

              <%= link_to 'Borrar', rateclass, method: :delete, data: { confirm: '¿Está seguro que desea borrar esta clase de elemento?' } , class:'btn btn-xs btn-danger'%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="btn btn-group">
    <%= link_to 'Crear', new_rateclass_path, class:'btn btn-sm btn-success' %>

    <%= link_to 'Volver a Cotizacion',new_exchange_path, :class=>'btn btn-sm btn-default' %>
  </div>
  </center>
</div>
